              <td class="title"><%= posts[i].title %></td>
              <td class="icons" rowspan="2">
                <div class="thumb_icon"><img src="/img/icon-thumb-blue.png"> <%= posts[i].post_id%7 %></div>
                <div class="comment_icon"><img src="/img/icon-comment-blue.png"> <%= posts[i].post_id%11 %>
